<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:layout_width="40dp"
        android:id="@+id/img"
        android:layout_centerVertical="true"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/img"
        android:layout_centerVertical="true"
        android:id="@+id/biglinear"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/smallliner"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textStyle="normal"
                android:textColor="@color/grey"
                android:textSize="12sp" />
            <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="12sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/fromsmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lastprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_toStartOf="@id/colorchange"
        android:layout_toEndOf="@id/biglinear"
        android:gravity="end"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingEnd="10dp"
        android:text="0.10111"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/colorchange"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/rect"
        android:foregroundGravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:paddingEnd="5dp"
             />

        <TextView
            android:id="@+id/pricechange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/arrow"
            android:text="0.10111"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
